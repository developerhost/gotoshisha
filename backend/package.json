{
  "name": "shisha-up",
  "version": "1.0.0",
  "description": "Backend API for gotoshisha using Hono + Cloudflare Workers + D1 + Prisma",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy --env production",
    "build": "wrangler deploy --dry-run",
    "db:generate": "prisma generate && prisma generate --generator zod",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:d1:local": "powershell -ExecutionPolicy Bypass -File scripts/migrate-d1-local.ps1",
    "db:migrate:d1": "bash scripts/migrate-d1.sh",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "db:seed-shisha": "tsx scripts/seed-shisha.ts",
    "db:seed-prod": "tsx scripts/seed-prod.ts",
    "db:seed-d1": "tsx scripts/seed-d1.ts",
    "db:query": "tsx scripts/query-d1.ts",
    "db:export": "tsx scripts/export-d1.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "@prisma/adapter-d1": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@types/jsonwebtoken": "^9.0.10",
    "hono": "^4.6.3",
    "hono-rate-limiter": "^0.4.2",
    "jose": "^6.0.11",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250614.0",
    "@eslint/js": "^9.29.0",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/ui": "^3.1.4",
    "eslint": "^9.15.0",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^3.1.4",
    "wrangler": "^4.20.0",
    "zod-prisma-types": "^3.2.4"
  },
  "private": true
}
